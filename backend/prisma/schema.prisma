generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  runtime  = "cloudflare"
}

datasource db {
  provider = "postgresql"
}

model UserModel {
  id        String   @id @default(uuid())
  email     String   @unique
  username  String   @unique
  name      String?
  password  String
  bio       String?
  avatar    String?
  createdAt DateTime @default(now())

  article   Article[]
  streak    WritingStreak?
  events    Events[]
  claps     Clap[]
  bookmarks Bookmark[]
  
  followers Follow[] @relation("following")
  following Follow[] @relation("follower")
}

model Article {
  id                String   @id @default(uuid())
  authorId          String
  published         Boolean  @default(false)
  published_At      DateTime @default(now())
  current_version   Int
  published_version Int?
  theme             String?

  author    UserModel        @relation(fields: [authorId], references: [id])
  versions  ArticleVersion[]
  claps     Clap[]
  bookmarks Bookmark[]
  createdAt DateTime         @default(now())
}

model ArticleVersion {
  id           String    @id @default(uuid())
  articleId    String
  version      Int
  title        String
  content      String
  content_json Json?
  wordCount    Int
  createdAt    DateTime @default(now())
  article      Article @relation(fields: [articleId], references: [id])
  @@unique([articleId, version])
}

model Clap {
  id        String   @id @default(uuid())
  userId    String
  articleId String
  count     Int      @default(1)
  user      UserModel @relation(fields: [userId], references: [id])
  article   Article   @relation(fields: [articleId], references: [id])
  @@unique([userId, articleId])
}


model Follow {
  followerId  String
  followingId String
  follower    UserModel @relation("follower", fields: [followerId], references: [id])
  following   UserModel @relation("following", fields: [followingId], references: [id])
  @@id([followerId, followingId])
}

model Bookmark {
  userId    String
  articleId String
  createdAt DateTime @default(now())
  user      UserModel @relation(fields: [userId], references: [id])
  article   Article   @relation(fields: [articleId], references: [id])
  @@id([userId, articleId])
}

model WritingStreak {
  id            String   @id @default(uuid())
  userId        String   @unique
  currentStreak Int
  longestStreak Int
  lastWriteDate DateTime

  user UserModel @relation(fields: [userId], references: [id])
}

model WritingDay {
  id     String   @id @default(uuid())
  userId String
  date   DateTime

  @@unique([userId, date])
}

model Events {
  id         String    @id @default(uuid())
  userId     String
  type       EventType
  payload    Json
  processed  Boolean   @default(false)
  retryCount Int       @default(0)

  createdAt DateTime @default(now())
  user UserModel @relation(fields: [userId], references: [id])
}

enum EventType{
  ARTICLE_VERSION_CREATED
  ARTICLE_PUBLISHED
}